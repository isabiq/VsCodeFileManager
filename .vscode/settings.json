// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "out": false // set this to true to hide the "out" folder with the compiled JS files
    },
    "search.exclude": {
        "out": true // set this to false to include "out" folder in search results
    },
    // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
    "typescript.tsc.autoDetect": "off",
    "typescript.tsdk": "node_modules/typescript/lib",
    "workbench.colorCustomizations": {
        "titleBar.activeBackground": "#df82ff",
        "titleBar.activeForeground": "#FFFFFF",
        "titleBar.inactiveBackground": "#df82ff",
        "titleBar.inactiveForeground": "#FFFFFF",
        "titleBar.border": "#df82ff",
        "activityBar.background": "#df82ff",
        "activityBar.foreground": "#FFFFFF",
        "statusBar.background": "#df82ff",
        "statusBar.foreground": "#FFFFFF",
        "statusBar.debuggingBackground": "#df82ff",
        "statusBar.debuggingForeground": "#FFFFFF",
        "tab.activeBorder": "#df82ff",
        "iLoveWorkSpaceColors": true,
        "iLoveWorkSpaceRandom": false
    }
}